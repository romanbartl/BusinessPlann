				<td>
					<div id="{$colors[$j+($i*5)]['id']}" class="cell" style="background-color:#{$colors[$j+($i*5)]['color']};" onclick="changeColor({$colors[$j+($i*5)]['id']}, {$colors[$j+($i*5)]['color']})"></div>
				</a></td>
			{/for}</tr>
		{/for}
	</table>
</div>

{/define}