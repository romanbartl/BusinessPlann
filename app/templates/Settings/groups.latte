	<script type="text/javascript" src="{$basePath}/js/animations/set_groups.js"></script>
	<script type="text/javascript" src="{$basePath}/js/url-groups.js"></script>
{/define}

{define #area}

<div id="settings_groups">
	<div id="groups" class="settings_container">
