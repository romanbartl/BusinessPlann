{block title}User settings{/block}

{block content}

<header id="header_settings">
	<div id="menu-button-settings" class="menu-button">
		<a n:href="Businessplann:default">
			<div id="menu-icon-settings" class="menu-icon">
				<span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
			</div>
		</a>

		<div class="menu-heading">
			<span class="menu-text">Nastavení</span>
		</div>
	</div>

	<div id="preferences">
		<div id="user-photo-small">
			<img class="profile-photo-small" src="pictures/profile.png">
		</div>
	</div>
</header>

		
<main id="main2">
	<nav class="settings_nav">
		<div id="menu">
			<a href="#">
				<div id="nav_settings_user" class="heading active">
					<span class="heading_text">
						<span class="glyphicon glyphicon-user"></span>
						<span class="text">Uživatel</span>
					</span>
				</div>
			</a>

			<a href="nastaveni_stitky.html">
				<div id="nav_settings_labels" class="heading">
					<span class="heading_text">
						<span class="glyphicon glyphicon-tags"></span>
						<span class="text">Štítky</span>
					</span>
				</div>
			</a>

			<a href="nastaveni_skupiny.html">
				<div id="nav_settings_labels" class="heading">
					<span class="heading_text">
						<span class="glyphicon glyphicon-user"></span>
						<span class="text">Skupiny</span>
					</span>
				</div>
			</a>

			<a href="nastaveni_o.html">						
				<div id="nav_about" class="heading">
					<span class="heading_text">
						<span class="glyphicon glyphicon-info-sign"></span>
						<span class="text">O BusinessPlan</span>
					</span>
				</div>
			</a>
		</div>
	</nav>

	<div id="settings_body" class="body">
			
		<div id="settings_user">
			<div id="user_heading" class="settings_heading">
				<span class="text">Uživatel</span>
			</div>

			<div id="user_profile" class="settings_container">
				<div id="profile_heading_smaller" class="heading_smaller">
					<span class="text">Obrázek profilu</span>
				</div>

				<div id="profile">
					<img src="pictures/profile.png">
				</div>
			</div>

			<div id="user_data" class="settings_container">
				<div id="data_heading_smaller" class="heading_smaller">
					<span class="text">Údaje</span>
				</div>

				<table id="change_data_tab">
					<tr id="change_name" class="data">
						<td class="description"><span class="text">Jméno</span></td>
						<td><input id="name_input" type="text" value="Roman Bártl" disabled></td>
						<td class="button_td"><input id="change_name_but" type="button" value="Změnit jméno" class="button"></td>
					</tr>

					<tr style="display: none;">
						<td>Heslo</td>
						<td><input type="text"></td>
					</tr>	

					<tr style="display: none;">
						<td>&nbsp;</td>
						<td>
							<input type="button" value="Storno" class="button">
							<input type="submit" value="Uložit" class="button" disabled>
						<td>
					</tr>

					<tr id="change_email" class="data">
						<td class="description"><span class="text">E-mail</span></td>
						<td><input id="email_input" type="text" value="bbartl.roman@gmail.com" disabled></td>
						<td class="button_td"><input id="change_email_but" type="button" value="Zmenit e-mail" class="button"></td>
					</tr>

					<tr id="change_passwd" class="data">
						<td class="description"><span class="text">Heslo</span></td>
						<td><input id="change_passwd_but" type="submit" value="Změnit heslo" class="button" style="width: 200px;"></td>
						<td>&nbsp;</td>
					</tr>
				</table>

			</div>

			<div id="user_sent_reminds" class="settings_container">
				<div id="reminds_heading_smaller" class="heading_smaller">
					<span class="text">Upozorění</span>
				</div>

				<div id="sent">
					<label><input type="checkbox" checked />&nbsp;&nbsp;&nbsp;Zasílat informace e-mailem</label>
				</div>
			</div>

			<div id="user_color-scheme" class="settings_container">
				<div id="color-scheme_heading_smaller" class="heading_smaller">
					<span class="text">Vzhled</span>
				</div>

				<div id="color-scheme">
